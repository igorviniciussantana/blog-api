generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         String   @id @default(cuid())
  title      String
  content    String
  banner_url String
  createdAt  DateTime @default(now())
  userId String
  categoryId String

  user User @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  username     String   @unique
  password     String
  avatarUrl    String?
  createdAt    DateTime @default(now())
  description  String?

  posts Post[]
}

model Category {
  id   String @id @default(cuid())
  name String

  posts Post[]
}
