generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         String   @id @default(cuid())
  title      String
  content    String
  banner_url String
  createdAt  DateTime @default(now())
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  username     String   @unique
  password     String
  googleId     String?  @unique
  avatarUrl    String?
  createdAt    DateTime @default(now())
  description  String?
  githubUrl    String?
  instagramUrl String?
}

model Category {
  id   String @id @default(cuid())
  name String
}
